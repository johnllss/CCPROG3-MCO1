<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane minHeight="400.0" minWidth="600.0" prefHeight="600.0" prefWidth="800.0" styleClass="primary-background" stylesheets="@Design.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="StoreApp.Controllers.Employee_Login_Controller">
   <children>
      <VBox alignment="CENTER" spacing="20.0" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="50.0">
         <children>
            <Label alignment="CENTER" text="Employee Login" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font name="Helvetica Neue Bold" size="50.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="30.0" />
               </VBox.margin>
            </Label>
            <Label fx:id="errorLabel" textAlignment="CENTER" textFill="#FF6B6B" wrapText="true">
               <font>
                  <Font name="Helvetica Neue" size="14.0" />
               </font>
            </Label>
            <TextField fx:id="emailText" maxWidth="350.0" minHeight="40.0" prefHeight="40.0" promptText="Email">
               <font>
                  <Font name="Helvetica Neue" size="16.0" />
               </font>
            </TextField>
            <TextField fx:id="passwordText" maxWidth="350.0" minHeight="40.0" prefHeight="40.0" promptText="Password">
               <font>
                  <Font name="Helvetica Neue" size="16.0" />
               </font>
            </TextField>
            <Button fx:id="loginBtn" maxWidth="350.0" minHeight="50.0" minWidth="200.0" mnemonicParsing="false" onAction="#login" prefHeight="50.0" styleClass="login-btn" text="Login">
               <font>
                  <Font name="Helvetica Neue" size="18.0" />
               </font>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="returnBtn" maxWidth="350.0" minHeight="50.0" minWidth="200.0" mnemonicParsing="false" onAction="#returnToMainMenu" prefHeight="50.0" styleClass="secondary-btn" text="Return to Main Menu">
               <font>
                  <Font name="Helvetica Neue" size="18.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>

               <children>
                  <VBox spacing="5" AnchorPane.leftAnchor="4" AnchorPane.topAnchor="5">
                     <children>
                        <Label fx:id="productName" maxWidth="150" style="-fx-font-size: 12;" text="ProductName" wrapText="true" />
                        <Label fx:id="productPrice" style="-fx-font-size: 13; -fx-font-weight: bold;" stylesheets="@Design.css" text="ProductPrice" />
                     </children>
                  </VBox>
                  <HBox fx:id="quantityControls" managed="false" spacing="5" visible="false" AnchorPane.bottomAnchor="5" AnchorPane.rightAnchor="5">
                     <children>
                        <Button fx:id="decrementBtn" minHeight="25" minWidth="25" mnemonicParsing="false" style="-fx-font-size: 12;" styleClass="circular-btn" stylesheets="@Design.css" text="-" textFill="WHITE">
                           <font>
                              <Font name="Helvetica Neue Bold" size="12.0" />
                           </font>
                        </Button>
                        <Label fx:id="quantityLabel" minWidth="20" style="-fx-font-size: 11; -fx-alignment: center;" text="0" />
                        <Button fx:id="incrementBtn" minHeight="25" minWidth="25" mnemonicParsing="false" style="-fx-font-size: 12;" styleClass="circular-btn" stylesheets="@Design.css" text="+" textFill="WHITE">
                           <font>
                              <Font name="Helvetica Neue Bold" size="12.0" />
                           </font>
                        </Button>
                        <Button fx:id="addToCartBtn" minHeight="30" minWidth="30" mnemonicParsing="false" onAction="#onAddToCartBtnClicked" styleClass="circular-btn" stylesheets="@Design.css" text="âœ“" textFill="WHITE">
                           <font>
                              <Font name="Helvetica Neue Bold" size="14.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>
                  <Button fx:id="initialAddBtn" minHeight="35" minWidth="35" mnemonicParsing="false" styleClass="circular-btn" stylesheets="@Design.css" text="+" textFill="WHITE" AnchorPane.bottomAnchor="5" AnchorPane.rightAnchor="5">
                     <font>
                        <Font name="Helvetica Neue Bold" size="16.0" />
                     </font>
                  </Button>
               </children>
            </AnchorPane>
         </children>
      </AnchorPane>
   </children>
</VBox>
